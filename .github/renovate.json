{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitsDisabled"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true,
      "pinDigests": true
    },
    {
      "matchFileNames": [
        ".pre-commit-config.yaml"
      ],
      "enabled": true,
      "automerge": true,
      "automergeType": "branch",
      "schedule": [
        "* * 1 * *"
      ],
      "automergeSchedule": [
        "* * 1 * *"
      ]
    },
    {
      "matchFileNames": [
        "defaults/main.yml"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "enabled": true,
      "automerge": false,
      "commitMessageAction": "update",
      "commitMessageTopic": "Ghost Docker image",
      "commitMessageExtra": "to {{#if isMajor}}v{{newMajor}}{{else}}v{{newVersion}}{{/if}}",
      "commitMessagePrefix": "chore(deps):",
      "schedule": [
        "before 2am on monday"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^defaults/main\\.yml$/"
      ],
      "matchStrings": [
        "# renovate: datasource=docker depName=ghost versioning=semver\\s+ghost_version:\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghost",
      "versioningTemplate": "semver",
      "packageNameTemplate": "ghost"
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
