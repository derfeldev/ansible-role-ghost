{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":semanticCommitsDisabled"],
  "labels": ["dependencies"],
  "dependencyDashboard": false,
  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "platformAutomerge": true,
  "hostRules": [
    {
      "hostType": "github",
      "token": "{{ secrets.RENOVATE_TOKEN }}"
    }
  ],
  "packageRules": [
    {
      "groupName": "docker images",
      "matchCategories": ["docker"],
      "enabled": true,
      "pinDigests": true
    },
    {
      "groupName": "pre-commit hooks",
      "matchFileNames": [".pre-commit-config.yaml"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "schedule": ["* * 1 * *"],
      "automergeSchedule": ["* * 1 * *"]
    },
    {
      "groupName": "Ghost Docker image",
      "matchFileNames": ["defaults/main.yml"],
      "matchUpdateTypes": ["patch", "minor"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "commitMessageAction": "update",
      "commitMessageTopic": "Ghost Docker image",
      "commitMessageExtra": "to v{{newVersion}}",
      "commitMessagePrefix": "chore(deps):",
      "schedule": ["at any time"]
    },
    {
      "groupName": "Major updates",
      "matchFileNames": ["defaults/main.yml"],
      "matchUpdateTypes": ["major"],
      "enabled": true,
      "automerge": false,
      "commitMessageAction": "update",
      "commitMessageTopic": "Ghost Docker image",
      "commitMessageExtra": "to v{{newVersion}}",
      "commitMessagePrefix": "chore(deps):",
      "schedule": ["at any time"]
    },
    {
      "groupName": "GitHub Actions",
      "matchCategories": ["github-actions"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash",
      "matchUpdateTypes": ["patch", "minor"],
      "schedule": ["at any time"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^defaults/main\\.yml$"],
      "matchStrings": [
        "# renovate: datasource=docker depName=ghost versioning=semver\\s+ghost_version:\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "ghost",
      "versioningTemplate": "semver",
      "packageNameTemplate": "ghost"
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
