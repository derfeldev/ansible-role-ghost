{% if ghost_container_labels_traefik_enabled %}
traefik.enable=true

{% if ghost_container_labels_traefik_docker_network %}
traefik.docker.network={{ ghost_container_labels_traefik_docker_network }}
{% endif %}

{% set middlewares = [] %}

{% if ghost_container_labels_middleware_basic_auth_enabled %}
{% set middlewares = middlewares + [ghost_identifier + '-basic-auth'] %}
traefik.http.middlewares.{{ ghost_identifier }}-basic-auth.basicauth.users={{ ghost_container_labels_middleware_basic_auth_users }}
{% endif %}

{% if ghost_container_labels_traefik_path_prefix != '/' %}
traefik.http.middlewares.{{ ghost_identifier }}-slashless-redirect.redirectregex.regex=^({{ ghost_container_labels_traefik_path_prefix | quote }})$
traefik.http.middlewares.{{ ghost_identifier }}-slashless-redirect.redirectregex.replacement=${1}/
{% set middlewares = middlewares + [ghost_identifier + '-slashless-redirect'] %}
{% endif %}

{% if ghost_container_labels_traefik_path_prefix != '/' %}
traefik.http.middlewares.{{ ghost_identifier }}-strip-prefix.stripprefix.prefixes={{ ghost_container_labels_traefik_path_prefix }}
{% set middlewares = middlewares + [ghost_identifier + '-strip-prefix'] %}
{% endif %}

{% if ghost_container_labels_traefik_additional_request_headers.keys() | length > 0 %}
{% for name, value in ghost_container_labels_traefik_additional_request_headers.items() %}
traefik.http.middlewares.{{ ghost_identifier }}-add-request-headers.headers.customrequestheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [ghost_identifier + '-add-request-headers'] %}
{% endif %}

{% if ghost_container_labels_traefik_additional_response_headers.keys() | length > 0 %}
{% for name, value in ghost_container_labels_traefik_additional_response_headers.items() %}
traefik.http.middlewares.{{ ghost_identifier }}-add-response-headers.headers.customresponseheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [ghost_identifier + '-add-response-headers'] %}
{% endif %}

traefik.http.routers.{{ ghost_identifier }}.rule={{ ghost_container_labels_traefik_rule }}
{% if ghost_container_labels_traefik_priority | int > 0 %}
traefik.http.routers.{{ ghost_identifier }}.priority={{ ghost_container_labels_traefik_priority }}
{% endif %}
traefik.http.routers.{{ ghost_identifier }}.service={{ ghost_identifier }}
{% if middlewares | length > 0 %}
traefik.http.routers.{{ ghost_identifier }}.middlewares={{ middlewares | join(',') }}
{% endif %}
traefik.http.routers.{{ ghost_identifier }}.entrypoints={{ ghost_container_labels_traefik_entrypoints }}
traefik.http.routers.{{ ghost_identifier }}.tls={{ ghost_container_labels_traefik_tls | to_json }}
{% if ghost_container_labels_traefik_tls %}
traefik.http.routers.{{ ghost_identifier }}.tls.certResolver={{ ghost_container_labels_traefik_tls_certResolver }}
{% endif %}

traefik.http.services.{{ ghost_identifier }}.loadbalancer.server.port={{ ghost_container_http_port }}
{% endif %}

{{ ghost_container_labels_additional_labels }}
